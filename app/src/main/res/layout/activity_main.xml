<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/table"
        android:background="@drawable/table2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playerDeck"
        android:background="@drawable/b2fb"
        android:layout_gravity="bottom"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_alignTop="@+id/currentPlayerCard"
        android:layout_toLeftOf="@+id/currentPlayerCard"
        android:layout_toStartOf="@+id/currentPlayerCard"
        android:layout_marginRight="39dp"
        android:layout_marginEnd="39dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/currentPlayerCard"
        android:background="@drawable/b2fv"
        android:layout_gravity="bottom"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_marginRight="81dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:background="@drawable/b2fb"
        android:layout_marginTop="78dp"
        android:onClick="playSound"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/playerDeck"
        android:layout_alignStart="@+id/playerDeck" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/currentComputerCard"
        android:background="@drawable/b2fv"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignLeft="@+id/currentPlayerCard"
        android:layout_alignStart="@+id/currentPlayerCard" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/game_message"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
